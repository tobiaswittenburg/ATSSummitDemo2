---
interface Props {
  word: string;
  translation: string;
  example?: string;
  category?: string;
}

const { word, translation, example, category } = Astro.props;
---

<div class="bg-white rounded-lg shadow-md p-6 hover:shadow-lg transition-shadow duration-300">
  {category && (
    <span class="inline-block bg-indigo-100 text-indigo-800 text-xs px-2 py-1 rounded-full mb-3">
      {category}
    </span>
  )}
  <div class="mb-4">
    <h3 class="text-2xl font-bold text-indigo-900 mb-2">{word}</h3>
    <p class="text-lg text-gray-700">{translation}</p>
  </div>
  {example && (
    <div class="mt-4 pt-4 border-t border-gray-200">
      <p class="text-sm text-gray-600 italic">
        <strong>Example:</strong> {example}
      </p>
    </div>
  )}
</div>
